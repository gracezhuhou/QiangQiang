        <item name="textContentColor">@color/black</item>
        <item name="semitransparent">#B3FFFFFF</item>
    </style>
    <style name="AppTheme.Base.Base.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

