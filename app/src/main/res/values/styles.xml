<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textContentColor">@color/black</item>
        <item name="semitransparent">#B3FFFFFF</item>
    </style>
    <!--粉色-->
    <style name="AppTheme.Base.Pink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_pink</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">#CD3333</item>
        <item name="colorPrimaryDark">#D8BFD8</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textContentColor">@color/black</item>
        <item name="semitransparent">#B3FFFFFF</item>
    </style>
    <!--蓝白-->
    <style name="AppTheme.Base.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_blueandwhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">#4169E1</item>
        <item name="colorPrimaryDark">#B2DFEE</item>
        <item name="colorAccent">#5CACEE</item>
        <item name="textContentColor">@color/black</item>
        <item name="semitransparent">#B3FFFFFF</item>
    </style>
    <!--卡通-->
    <style name="AppTheme.Base.Cartoon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
