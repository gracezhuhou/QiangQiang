<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unforgettable.SetActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_90"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_15">
        <ImageView
            android:id="@+id/userPic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/ic_logo"
            android:contentDescription="加载中" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:text="TextView"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/sp_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp_330"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/snycButton"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_64"
        android:background="?attr/semitransparent"
        android:text="数据同步"
        android:textSize="@dimen/sp_16"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_64"
        android:background="?attr/semitransparent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/snycButton"
        android:layout_marginTop="@dimen/dp_20">

        <TextView
            android:id="@+id/set_time"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center"
            android:text="提醒时间"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:text="不提醒"/>

    </RelativeLayout>

    <Button
        android:id="@+id/help"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_64"
        android:background="?attr/semitransparent"
        android:text="帮助"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/change_appearance"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/change_appearance"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_64"
        android:background="?attr/semitransparent"
        android:text="换肤"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativelayout"
        android:layout_marginTop="@dimen/dp_20"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_64"
        android:background="?attr/semitransparent"
        android:text="注销账户"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/help"/>
</RelativeLayout>