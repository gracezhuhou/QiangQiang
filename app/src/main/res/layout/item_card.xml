            <!--android:id="@+id/delButton"-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="删除" />-->
    <!--</LinearLayout>-->

</RelativeLayout>


